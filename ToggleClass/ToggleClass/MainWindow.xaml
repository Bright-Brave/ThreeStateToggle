<Window x:Class="ToggleClass.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToggleClass"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MouseMove="Window_MouseMove">
    <Window.Resources>

    </Window.Resources>
    <Grid>
        <local:Toggle x:Name="tg" VerticalAlignment="Center" HorizontalAlignment="Center" IsThreeState="True" Click="Toggle_Click" IsChecked="{x:Null}"/>
        <TextBlock x:Name="txt" HorizontalAlignment="Center" VerticalAlignment="Bottom"></TextBlock>
    </Grid>
</Window>
